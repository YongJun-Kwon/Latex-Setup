{
  // ===== 수식/환경 =====
  "Inline Math": {
    "prefix": "mk",
    "body": ["\\($TM_SELECTED_TEXT$1\\)"],
    "description": "Inline math: \\(...\\)"
  },
  "Display Math": {
    "prefix": "dm",
    "body": ["\\[", "$TM_SELECTED_TEXT$1", "\\]"],
    "description": "Display math: \\[...\\]"
  },
  "Equation": {
    "prefix": "eq",
    "body": [
      "\\begin{equation}",
      "  $TM_SELECTED_TEXT$1",
      "\\end{equation}"
    ],
    "description": "equation 환경"
  },
  "Align": {
    "prefix": "al",
    "body": [
      "\\begin{align*}",
      "  $1 \\\\",
      "  $2",
      "\\end{align*}"
    ],
    "description": "align 환경"
  },
  "Cases": {
    "prefix": "cases",
    "body": [
      "\\begin{cases}",
      "  $1, &\\text{$2}$ \\\\",
      "  $3, &\\text{$4}$",
      "\\end{cases}"
    ],
    "description": "cases 환경"
  },

  // ===== 자주 쓰는 수식 토막 =====
  "Fraction": {
    "prefix": "frac",
    "body": ["\\frac{$1}{$2}"],
    "description": "\\frac{}{}"
  },
  "Partial Derivative": {
    "prefix": "pder",
    "body": ["\\frac{\\partial $1}{\\partial $2}"],
    "description": "∂/∂"
  },
  "Total Derivative": {
    "prefix": "tder",
    "body": ["\\frac{\\mathrm{d} $1}{\\mathrm{d} $2}"],
    "description": "d/d"
  },
  "Vector Bold": {
    "prefix": "vb",
    "body": ["\\mathbf{$1}"],
    "description": "\\mathbf{}"
  },
  "Bold Symbol": {
    "prefix": "bb",
    "body": ["\\boldsymbol{$1}"],
    "description": "\\boldsymbol{}"
  },
  "Hat / Tilde / Bar": {
    "prefix": "hat",
    "body": ["\\hat{$1}"],
    "description": "\\hat{}"
  },
  "tilde": {
    "prefix": "til",
    "body": ["\\tilde{$1}"],
    "description": "\\tilde{}"
  },
  "bar": {
    "prefix": "bar",
    "body": ["\\overline{$1}"],
    "description": "\\overline{}"
  },

  // ===== 브라–켓 (양자역학) =====
  "bra": {
    "prefix": "bra",
    "body": ["\\langle $1 |"],
    "description": "bra: ⟨ψ|"
  },
  "ket": {
    "prefix": "ket",
    "body": ["| $1 \\rangle"],
    "description": "ket: |ψ⟩"
  },
  "braket": {
    "prefix": "brk",
    "body": ["\\langle $1 | $2 \\rangle"],
    "description": "⟨ψ|φ⟩"
  },
  "outer": {
    "prefix": "out",
    "body": ["| $1 \\rangle\\langle $2 |"],
    "description": "Outer product"
  },

  // ===== 행렬/벡터 =====
  "pmatrix": {
    "prefix": "pmat",
    "body": [
      "\\begin{pmatrix}",
      "  $1 & $2 \\\\",
      "  $3 & $4",
      "\\end{pmatrix}"
    ],
    "description": "pmatrix 2x2"
  },
  "bmatrix": {
    "prefix": "bmat",
    "body": [
      "\\begin{bmatrix}",
      "  $1 & $2 \\\\",
      "  $3 & $4",
      "\\end{bmatrix}"
    ],
    "description": "bmatrix 2x2"
  },

// === 박스 스타일 정리/증명 ===
 "Theorem (tcolorbox style)": {
    "prefix": "thm",
    "body": [
      "\\begin{theorem}[$1]",
      "  $2",
      "\\end{theorem}"
    ],
    "description": "박스형 Theorem 환경 골격"
  },
  "Definition (tcolorbox style)": {
    "prefix": "def",
    "body": [
      "\\begin{definition}[$1]",
      "  $2",
      "\\end{definition}"
    ],
    "description": "박스형 Definition 환경 골격"
  },
  "Lemma (tcolorbox style)": {
    "prefix": "lem",
    "body": [
      "\\begin{lemma}[$1]",
      "  $2",
      "\\end{lemma}"
    ],
    "description": "박스형 Lemma 환경 골격"
  },
  "Corollary (tcolorbox style)": {
    "prefix": "cor",
    "body": [
      "\\begin{corollary}[$1]",
      "  $2",
      "\\end{corollary}"
    ],
    "description": "박스형 Corollary 환경 골격"
  },
  "Remark (tcolorbox style)": {
    "prefix": "rmk",
    "body": [
      "\\begin{remark}[$1]",
      "  $2",
      "\\end{remark}"
    ],
    "description": "박스형 Remark 환경 골격"
  },
  "Proof": {
    "prefix": "pf",
    "body": [
      "\\begin{proof}",
      "  $1",
      "\\end{proof}"
    ],
    "description": "Proof 환경"
  },


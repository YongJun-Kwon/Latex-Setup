// ===== Footnote 관련 통합 스니펫 =====
"Footnote 설정 (기호 체계)": {
  "prefix": "fnsetup",
  "body": [
    "% ---- 각주 스타일 및 기호 체계 ----",
    "\\usepackage[hang,flushmargin]{footmisc} % 들여쓰기 없이 매단 각주",
    "\\setlength{\\footnotesep}{10pt}          % 각주 줄 간격",
    "\\renewcommand{\\thefootnote}{\\fnsymbol{footnote}} % 숫자 대신 *, †, ‡, §, ¶, ‖"
  ],
  "description": "각주 스타일과 기호 체계(*, †, ‡ ...)를 전역 설정"
},

"Footnote (본문)": {
  "prefix": "fn",
  "body": [
    "\\footnote{$1}"
  ],
  "description": "기본 footnote (본문/수식 뒤)"
},

"Footnotemark + Footnotetext": {
  "prefix": "fnm",
  "body": [
    "\\footnotemark",
    "\\footnotetext{$1}"
  ],
  "description": "수식 안 표시용 footnote (표시/내용 분리)"
},

  // ===== 목록/그림/표 =====
  "Itemize": {
    "prefix": "it",
    "body": [
      "\\begin{itemize}",
      "  \\item $1",
      "  \\item $2",
      "\\end{itemize}"
    ],
    "description": "itemize"
  },
  "Enumerate": {
    "prefix": "en",
    "body": [
      "\\begin{enumerate}",
      "  \\item $1",
      "  \\item $2",
      "\\end{enumerate}"
    ],
    "description": "enumerate"
  },
  "Figure": {
    "prefix": "fig",
    "body": [
      "\\begin{figure}[t]",
      "  \\centering",
      "  \\includegraphics[width=$1\\linewidth]{$2}",
      "  \\caption{$3}",
      "  \\label{fig:$4}",
      "\\end{figure}"
    ],
    "description": "figure 환경"
  },
  "Table": {
    "prefix": "tab",
    "body": [
      "\\begin{table}[t]",
      "  \\centering",
      "  \\begin{tabular}{${1|c,l,r,cc,lll|}}",
      "    \\hline",
      "    $2 \\\\",
      "    \\hline",
      "  \\end{tabular}",
      "  \\caption{$3}",
      "  \\label{tab:$4}",
      "\\end{table}"
    ],
    "description": "table + tabular"
  },

  // ===== 전역 프리엠블 단축 =====
  "Common Preamble (physics)": {
    "prefix": "prephys",
    "body": [
      "% --- Common packages ---",
      "\\usepackage{amsmath, amssymb, amsthm, bm}",
      "\\usepackage{physics}",
      "\\usepackage{mathtools}",
      "\\usepackage{siunitx}",
      "\\usepackage{graphicx}",
      "\\usepackage[hidelinks]{hyperref}",
      "",
    //   "% --- Theorem style ---",
    //   "\\newtheorem{theorem}{Theorem}",
    //   "\\newtheorem{lemma}{Lemma}",
    //   "\\theoremstyle{remark}",
    //   "\\newtheorem*{remark}{Remark}",
    //   "",
    //   "% --- Bra-Ket helpers ---",
    //   "\\newcommand{\\bra}[1]{\\langle #1|}",
    //   "\\newcommand{\\ket}[1]{|#1\\rangle}",
    //   "\\newcommand{\\braket}[2]{\\langle #1|#2\\rangle}"
    ],
    "description": "자주 쓰는 패키지/정의 묶음"
  }
}

\newcommand{\setheaders}[2]{%
  \renewcommand{\LeftHeader}{#1}%
  \renewcommand{\RightHeader}{#2}%
  \fancyhead[L]{\LeftHeader}%
  \fancyhead[R]{\RightHeader}%
}
\newcommand{\setfooters}[2]{%
  \renewcommand{\LeftFooter}{#1}%
  \renewcommand{\CenterFooter}{#2}%
  \fancyfoot[L]{\LeftFooter}%
  \fancyfoot[C]{\CenterFooter}%
}


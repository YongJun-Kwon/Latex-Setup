% 1) amsthm로 theorem-like 환경 정의(섹션 단위 번호)
\usepackage{amsthm}
\theoremstyle{plain}
\newtheorem{theorem}{Theorem}[section]
\newtheorem{lemma}{Lemma}[section]
\newtheorem{proposition}{Proposition}[section]
\newtheorem{corollary}{Corollary}[section]
\theoremstyle{definition}
\newtheorem{definition}{Definition}[section]
\theoremstyle{remark}
\newtheorem{remark}{Remark}[section]

% 2) tcolorbox로 외형(박스)만 적용
\usepackage[most]{tcolorbox}
\tcbset{
  theostyle/.style={
    enhanced, breakable,
    sharp corners,
    boxrule=0.6pt, colback=white, colframe=black,
    attach boxed title to top left={yshift=-2mm, xshift=2mm},
    boxed title style={colback=white, boxrule=0pt, left=2mm, right=2mm},
    fonttitle=\bfseries
  }
}
\tcolorboxenvironment{theorem}{theostyle}
\tcolorboxenvironment{definition}{theostyle}
\tcolorboxenvironment{lemma}{theostyle}
\tcolorboxenvironment{remark}{theostyle}

